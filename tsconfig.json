{
    "compilerOptions": {
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es2015",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["*"],
            "@/*": ["src/*"]
        },
        "lib": [
            "es2015",
            "es2016.array.include",
            "esnext.array"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
